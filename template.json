{
   "template":"sw*",
   "settings":{
      "number_of_shards":1,
      "analysis":{
         "analyzer":{
            "custom_analyzer":{
               "type":"standard",
               "stopwords": "_english_"
            }
         }
      }
   },
   "mappings":{
      "_default_":{
         "dynamic_templates":[
            {
               "not_analyzed_strings":{
                  "match_mapping_type":"string",
                  "mapping":{
                     "type":"string",
                     "index":"not_analyzed"
                  }
               }
            }
         ]
      },
      "film":{
         "properties":{
            "opening_crawl":{
               "type":"string",
               "analyzer":"custom_analyzer"
            }
         }
      }
   }
}
